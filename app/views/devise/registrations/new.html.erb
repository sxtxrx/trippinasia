<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">アカウント新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "Email address" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"trippin@asia.com" %>
        </div>

        <div class="field">
          <%= f.label :password, "Password（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"Password"%>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"Password"%>
        </div>

        <div class="field">
          <%= f.label :name, "User Name" %><br />
          <%= f.text_field :name ,placeholder:"name"%>
        </div>

        <div class="field">
          <%= f.label :profile, "Profile" %><br />
          <%= f.text_area :profile, class: :form__text ,placeholder:"自己紹介"%>
        </div>
        <div class="actions">
          <%= f.submit "アカウント作成", class: :form__btn  %>
        </div>
        
        </div> 

        
      <% end %>
    </div>
  </div>
</div>
